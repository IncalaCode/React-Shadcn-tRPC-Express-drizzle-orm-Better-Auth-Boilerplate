# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
SEND_SIGNIN_NOTIFICATIONS = false

# Authentication methods: 'email', 'phone', 'both'
AUTH_METHOD=both

# Authentication page access control: 'login', 'register', 'both'
# - 'login': Only login page is accessible, registration is disabled
# - 'register': Only registration page is accessible, login is disabled  
# - 'both': Both login and registration pages are accessible (default)
SHOW_AUTH=both

# Phone number authentication settings
PHONE_AUTH_ENABLED=true
PHONE_VERIFICATION_REQUIRED=true
PHONE_VERIFICATION_EXPIRES=300

# SMS Configuration (for phone verification)
# Options: 'mock', 'custom', or your provider name
SMS_PROVIDER=mock

# Add your custom SMS provider configuration here
# Examples:
# SMS_API_KEY=your-api-key
# SMS_API_SECRET=your-api-secret
# SMS_ENDPOINT=https://api.yoursmsprovider.com/send
# SMS_FROM_NUMBER=+1234567890

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Supported DB types: sqlite, mysql
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=password
DB_DATABASE=myapp
DB_SYNCHRONIZE=false
DB_LOGGING=true

# =============================================================================
# BETTER AUTH CONFIGURATION
# =============================================================================
BETTER_AUTH_SECRET=your-better-auth-secret-key-here
BETTER_AUTH_URL=http://localhost:3000

# Authentication method: 'session' or 'jwt'
BETTERAUTH_WAY=session

# =============================================================================
# BETTER AUTH SECURITY SETTINGS
# =============================================================================
# Password policies
BETTERAUTH_PASSWORD_MIN_LENGTH=8

# Email verification
BETTERAUTH_EMAIL_VERIFICATION_REQUIRED=true
BETTERAUTH_EMAIL_VERIFICATION_EXPIRES=86400

# Session security
BETTERAUTH_SESSION_DURATION=604800
BETTERAUTH_SESSION_HTTPONLY=true
BETTERAUTH_SESSION_SECURE=false
BETTERAUTH_SESSION_SAMESITE=lax

# Rate limiting
BETTERAUTH_RATE_LIMIT_ENABLED=true
BETTERAUTH_RATE_LIMIT_WINDOW_MS=900000
BETTERAUTH_RATE_LIMIT_MAX_ATTEMPTS=100

# JWT Configuration (when BETTERAUTH_WAY=jwt)
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Enable telemetry
BETTER_AUTH_TELEMETRY=1

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# For development: allow multiple frontend ports (comma-separated)
# You can use environment variables and additional URLs
CORS_ORIGIN=${FRONTEND_URL},http://localhost:5174
CORS_CREDENTIALS=true

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP Configuration for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourapp.com

# Application branding for emails
APP_NAME=Your App
SUPPORT_EMAIL=support@yourapp.com

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info

