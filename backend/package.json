{
  "name": "backend",
  "version": "1.0.0",
  "description": "Express.js backend with TypeORM, tRPC, and authentication",
  "main": "dist/index.js",
  "workspaces": [
    "backend"
  ],
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:nodemon": "nodemon",
    "build": "tsc",
    "start": "node dist/index.js",
    "seed": "tsx src/database/seeds/index.ts",
    "seed:admin": "tsx src/database/seeds/adminSeed.ts",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm -- migration:generate -d src/database/connection.ts src/database/migrations/AutoSync_$(date +%Y%m%d%H%M%S)",
    "migration:run": "npm run typeorm -- migration:run -d src/database/connection.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/database/connection.ts"
  },
  "dependencies": {
    "@better-auth/utils": "^0.2.6",
    "@hedystia/better-auth-typeorm": "^0.3.0",
    "@trpc/server": "^10.45.2",
    "@types/pg": "^8.15.5",
    "@types/sqlite3": "^3.1.11",
    "bcryptjs": "^3.0.2",
    "better-auth": "^1.3.7",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "mysql2": "^3.14.3",
    "nodemailer": "^7.0.5",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.17",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^7.0.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "express",
    "typescript",
    "typeorm",
    "trpc",
    "authentication",
    "database-agnostic"
  ],
  "author": "kalebademkisho@gmail.com",
  "license": "MIT"
}
